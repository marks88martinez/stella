<div class="col-xs-12">
<% if @client.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

    <ul>
        <% @client.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>

    </div>
<% end %>


  <% if notice%>
  <div class="alert alert-success alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>


                <%= notice %>
  </div>
<% end %>
</div>
    <div class="col-xs-12">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Cliente</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->

              <%=form_for(@client) do |f| %>

              <div class="box-body">
              <%= f.fields_for :persona do |persona_fields| %>
                <div class="form-group">
                  <%= persona_fields.label :nombre %><br>
                  <%=persona_fields.text_field :nombre, class: "form-control", placeholder: "Nombre / Empresa"%>
                </div>
                <div class="form-group">
                  <%= persona_fields.label :apellido %><br>
                  <%=persona_fields.text_field :apellido, class: "form-control", placeholder: "Apellido"%>
                </div>
                <div class="form-group">
                  <%= persona_fields.label :tipo_documento %><br>


                  <%= persona_fields.select(:tipo_documento, options_for_select([['CI', 'CI'], ['RUC','RUC']]),{},{:class=> "form-control"}) %>
                </div>
                <div class="form-group">
                  <%= persona_fields.label :numero_documento %><br>
                  <%=persona_fields.text_field :numero_documento, class: "form-control", placeholder: "numero documento"%>
                </div>
                <div class="form-group">
                  <%= persona_fields.label :direccion %><br>
                  <%=persona_fields.text_field :direccion, class: "form-control", placeholder: "direccion"%>
                </div>
                <div class="form-group">
                  <%= persona_fields.label :telefono %><br>
                  <%=persona_fields.text_field :telefono, class: "form-control", placeholder: "telefono"%>

                </div>
                <div class="form-group">
                  <%= persona_fields.label :email %><br>
                  <%=persona_fields.text_field :email, class: "form-control", placeholder: "email"%>
                </div>

                <% end %>


              </div>
              <!-- /.box-body -->

              <div class="box-footer">

                <%= f.submit 'Enviar', :class => 'btn btn-primary' %>
              </div>

            <% end %>
          </div>



        </div>
